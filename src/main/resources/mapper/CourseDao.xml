<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dao.CourseDao">

	<select id="selectListVO"
		resultType="com.entity.vo.CourseVO" >
		SELECT * FROM course  course
        <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	
	<select id="selectVO"
		resultType="com.entity.vo.CourseVO" >
		SELECT  course.* FROM course  course
 		<where> 1=1 ${ew.sqlSegment}</where>
	</select>

    <select id="selectListView"
		resultType="com.entity.view.CourseView" >

		SELECT  course.* FROM course  course
        <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	
	<select id="selectView"
		resultType="com.entity.view.CourseView" >
		SELECT * FROM course  course <where> 1=1 ${ew.sqlSegment}</where>
	</select>

	<delete id="deleteBatchIds">
		DELETE FROM course WHERE id IN
		<foreach item="item" index="index" collection="list" open="(" separator="," close=")">
			#{item}
		</foreach>
	</delete>

	<select id="selectById" resultType="com.entity.CourseEntity">
		SELECT  * FROM course WHERE id = #{id}
	</select>

	<update id="update">
		update course
		<set >
			<if test="name != null" >
				name = #{name},
			</if>
			<if test="credit != null" >
				credit = #{credit},
			</if>
			<if test="note != null" >
				note = #{note},
			</if>
		</set>
		where id = #{id}
	</update>

	<insert id="insert">
		insert into course
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="name != null">
				name,
			</if>
			<if test="credit != null">
				credit,
			</if>
			<if test="note != null">
				note,
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="name != null">
				#{name},
			</if>
			<if test="credit != null">
				#{credit},
			</if>
			<if test="note != null">
				#{note},
			</if>
		</trim>
	</insert>
</mapper>
